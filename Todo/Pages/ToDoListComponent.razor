<div class="flex flex-col">

        <ul class="flex flex-row">
            @foreach (var todoItem in TodoItems.OrderBy(x => !x.Status))
            {
                <TodoItemComponent TodoItem="@todoItem"></TodoItemComponent>
            }
        </ul>

        <label class="ml-2 font-mono">Add a new todo item</label>

        <div class="flex flex-wrap items-center">

            <div class="flex flex-col">
                <input class="p-6 m-1 mt-0 border-2 rounded-xl shadow-md" type="text" @bind="@NewTodoItemName" />
                @*<label class="@(IsInputEmpty ? "" : "hidden") ml-2 text-red-500 font-mono">Input required!</label>*@
            </div>
            <button disabled="@IsInputEmpty" class="p-6 m-1 mt-0 border-2 bg-blue-50 rounded-xl shadow-md font-mono text-lg" @onclick="@AddTodoItemToList">Add</button>
        </div>


</div>




